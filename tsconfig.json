{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2015",
    "moduleResolution": "node",
    "lib": [
      "ES2017",
      "DOM",
      "DOM.Iterable"
    ],
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "./",
    "baseUrl": "./packages"
  },
  "include": [
    "src/*.ts"
  ],
  "references": [
    {
      "path": "packages/belle-button"
    }
  ]
}

